<div class="dash-body">
    <div class="main-dash-cont">
        <div>
            <h2>User Profile</h2>
        </div>
        <div>
          <% if @trader.avatar.attached? %>
          <%= cl_image_tag(@trader.avatar.key, crop: :scale, width: 100, cloud_name: ENV["CLOUDINARY_CLOUDNAME"]) %>
          <% end %>
        </div>
        <div>
            <h3><%= @trader.username.titleize %></h3>
            <h4>Credits: <%= @trader.credits %></h4>
            <h4>Strongest Rift Closed: <%= @trader.highest_rift_level %></h4>
            <h4>No. of Rifts Closed: <%= @trader.rifts_closed %></h4>
            <h4>No. of Items Traded: <%= @trader.items_traded %></h4>
        </div>
        <div>
          <% if @admin == true %>
            <%= link_to "Make Admin", make_admin_path(@trader), method: "PUT", data: {confirm: "Are you sure?" } %>
            <%= link_to "Unmake Admin", unmake_admin_path(@trader), method: "PUT", data: {confirm: "Are you sure?" } %>
            <%= link_to "Delete This Account", trader_path(@trader), method: "DELETE", data: {confirm: "Are you sure?" } %>
          <% end %>
        </div>
    </div>
    <div class="dash-cont">
        <h3>Market Listed Items</h3>
        <div class="parent-cont">
          <% @trader.items.each do |item| %>
            <% if item.listed == true %>
              <div class="item-container">
                  <% if item.icon.attached? %>
                  <%= cl_image_tag(item.icon.key, crop: :scale, width: 100, cloud_name: ENV["CLOUDINARY_CLOUDNAME"]) %>
                  <% end %>
                  <p>Name: <%= item.name.titleize %></p>
                  <p>Type: <%= item.item_type.titleize %></p>
                  <p>Rarity: <%= item.rarity.titleize %></p>
                  <p>Description: <%= item.description %></p>
                  <p>Power: <%= item.power %></p>
                  <p>Price: <%= item.listed_price %></p>
              </div>
            <% end %>
          <% end %>
        </div>
    </div>
    <div class="dash-cont">
        <h3>Equipped Items</h3>
        <div class="parent-cont">
          <% @trader.items.each do |item| %>
            <% if item.equipped == true %>
              <div class="item-container">
                  <% if item.icon.attached? %>
                  <%= cl_image_tag(item.icon.key, crop: :scale, width: 100, cloud_name: ENV["CLOUDINARY_CLOUDNAME"]) %>
                  <% end %>
                  <p>Name: <%= item.name.titleize %></p>
                  <p>Type: <%= item.item_type.titleize %></p>
                  <p>Rarity: <%= item.rarity.titleize %></p>
                  <p>Description: <%= item.description %></p>
                  <p>Power: <%= item.power %></p>
              </div>
            <% end %>
          <% end %>
        </div>
    </div>
</div>
