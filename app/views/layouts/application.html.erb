<!DOCTYPE html>
<html>
  <head>
    <title>HermeticExchange</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <% if trader_signed_in? %>
      <div class="nav-cont">
        <nav class="nav">
          <div class="nav-link">
            Welcome <%= current_trader.username %>! | <%= link_to 'Logout', destroy_trader_session_path, method: :delete %>
          </div>
        </nav>
        <div class="nav-link">        
          <%= link_to 'About', new_trader_registration_path, method: :get %>
        </div> 
      </div>
    
    <% else %>
    <div class="nav-cont">
      <nav class="nav">
        <div class="nav-link">
          <%= link_to 'Sign In', new_trader_session_path, method: :get %> <%= link_to 'Sign Up', new_trader_registration_path, method: :get %>
        </div>
      </nav>
      <div class="nav-link">        
        <%= link_to 'Buy Credits', credits_path, method: :get %> <%= link_to 'About', about_path, method: :get %>
      </div> 
    </div>
    <% end %>
    <div>
      <h1>The Hermetic Exchange</h1>
    </div>
    <% if trader_signed_in? %>
    <%= render 'layouts/nav' %>
    <% end %>
    <%= yield %>
  </body>
</html>
