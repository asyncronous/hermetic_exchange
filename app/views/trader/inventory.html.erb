<div class="dash-body">
    <div class="dash-cont">
        <h1>Inventory</h1>
        <% @items.each do |item| %>
            <div class="item-container">
                <p>Name: <%= item.name %></p>
                <p>Type: <%= item.item_type %></p>
                <p>Rarity: <%= item.rarity %></p>
                <p>Description:<%= item.description %></p>
                <p>Power: <%= item.power %></p>
                <p>Worth: <%= item.worth %></p>
                <p>Equipped: <%= item.equipped  %></p>
                <%= form_with model: item, local: true do |f| %>
                <div>
                    <%= f.label :listed_price %>
                    <%= f.number_field :listed_price, min: 100 %>
                    <br>
                    <% f.label :equipped_listed %>
                    Equipped: <%= f.radio_button :equipped_listed, :equipped, checked: item.equipped %>
                    <br>
                    Listed: <%= f.radio_button :equipped_listed, :listed, checked: item.listed %>
                    <br>
                    None: <%= f.radio_button :equipped_listed, :none %>
                </div>
                <div>
                    <%= f.submit %>
                </div>
                <% end %>

                <p>On Exchange?: <%= item.listed %></p>
            </div>
        <% end %>
    </div>
    <div class="dash-cont">
        <div>
            <h3><%= current_trader.username %></h3>
            <p>Lorem Ipsum Description</p>
            <h4>Strongest Rift Closed: <%= current_trader.highest_rift_level %></h4>
            <h4>Power Level: <%= @power_level %></h4>
            <h4>No. of Rifts Closed: <%= current_trader.rifts_closed %></h4>
            <h4>No. of Items Traded: <%= current_trader.items_traded %></h4>
            <%= link_to 'Edit Profile', edit_trader_registration_path, method: :get %>
        </div>
    </div>
</div>


